<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_gravity="center_vertical"
    android:background="@color/notification_background"
    tools:context="net.feheren_fekete.android.quickcontrols.MainActivity">

    <ProgressBar
        android:id="@+id/music_volume_level_bar"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:progress="50"
        android:visibility="visible"
        android:gravity="center"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressTint="@color/notification_volume_bar"
        android:progressBackgroundTint="@color/notification_volume_bar_background"
        />

    <ProgressBar
        android:id="@+id/music_muted_timeout_bar"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:progress="50"
        android:visibility="visible"
        android:gravity="center"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressTint="@color/notification_mute_timeout_bar"
        android:progressBackgroundTint="@color/notification_mute_timeout_bar_background"
        />

    <TextView
        android:id="@+id/music_volume_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/music_volume_level_bar"
        android:layout_alignTop="@id/music_volume_level_bar"
        android:layout_alignBottom="@id/music_volume_level_bar"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="@color/notification_icon"
        android:textSize="10sp"
        android:visibility="visible"
        tools:text="100%"
        />

    <ImageView
        android:id="@+id/toggle_keep_screen_on_button"
        android:layout_width="@dimen/notification_icon_size"
        android:layout_height="@dimen/notification_icon_size"
        android:layout_marginLeft="@dimen/notification_icon_margin"
        android:layout_marginRight="@dimen/notification_icon_margin"
        android:layout_below="@id/music_volume_level_bar"
        android:src="@drawable/ic_screen_off"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/music_volume_down_button"
        android:layout_width="@dimen/notification_icon_size"
        android:layout_height="@dimen/notification_icon_size"
        android:layout_below="@id/music_volume_level_bar"
        android:layout_toRightOf="@id/toggle_keep_screen_on_button"
        android:layout_marginLeft="@dimen/notification_icon_margin"
        android:layout_marginRight="@dimen/notification_icon_margin"
        android:src="@drawable/ic_volume_down"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/music_volume_up_button"
        android:layout_width="@dimen/notification_icon_size"
        android:layout_height="@dimen/notification_icon_size"
        android:layout_below="@id/music_volume_level_bar"
        android:layout_toRightOf="@id/music_volume_down_button"
        android:layout_marginLeft="@dimen/notification_icon_margin"
        android:layout_marginRight="@dimen/notification_icon_margin"
        android:src="@drawable/ic_volume_up"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/toggle_music_muted_button"
        android:layout_width="@dimen/notification_icon_size"
        android:layout_height="@dimen/notification_icon_size"
        android:layout_below="@id/music_volume_level_bar"
        android:layout_toRightOf="@id/music_volume_up_button"
        android:layout_marginLeft="@dimen/notification_icon_margin"
        android:layout_marginRight="@dimen/notification_icon_margin"
        android:src="@drawable/ic_volume_on"
        android:visibility="visible"
        />

    <FrameLayout
        android:id="@+id/toggle_music_muted_with_timeout_button"
        android:layout_width="@dimen/notification_icon_size"
        android:layout_height="@dimen/notification_icon_size"
        android:layout_below="@id/music_volume_level_bar"
        android:layout_toRightOf="@id/toggle_music_muted_button"
        android:layout_marginLeft="@dimen/notification_icon_margin"
        android:layout_marginRight="@dimen/notification_icon_margin"
        >

        <ImageView
            android:id="@+id/toggle_music_muted_with_timeout_primary_icon"
            android:layout_width="@dimen/notification_icon_size_primary"
            android:layout_height="@dimen/notification_icon_size_primary"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_volume_on"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/toggle_music_muted_with_timeout_secondary_icon"
            android:layout_width="@dimen/notification_icon_size_secondary"
            android:layout_height="@dimen/notification_icon_size_secondary"
            android:layout_gravity="left|top"
            android:src="@drawable/ic_timer_off"
            android:visibility="visible"
            />

    </FrameLayout>


</RelativeLayout>
